<% if user_signed_in? %>
  <!-- Show navigation for logged-in users -->
  <p>Welcome, <%= current_user.first_name %>!</p>
  <%= link_to "Logout", destroy_user_session_path, method: :get, data: { turbo: false } %>
<% else %>
  <!-- Show links for non-authenticated users -->
  <%= link_to 'Sign Up', new_user_registration_path %>
  <%= link_to 'Log In', new_user_session_path %>
<% end %>
