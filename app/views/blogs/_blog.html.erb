<div id="<%= dom_id blog %>">
  <p>
    <strong>Title:</strong>
    <%= blog.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= blog.content %>
  </p>

 <p>
  <strong>Image:</strong>
  <% if blog.image.attached? %>
     <%= image_tag blog.image %>
    <%= image_tag blog.image.variant(resize_to_limit: [300, 300]) %> <!-- Adjust size as needed -->
  <% else %>
    <span>No image available</span>
  <% end %>
  </p>

  <p>
    <strong>Published:</strong>
    <%= blog.published %>
  </p>

</div>
